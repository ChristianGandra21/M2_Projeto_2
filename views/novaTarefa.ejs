    <script>
      // Envio do formulÃ¡rio com Fetch API
      document.getElementById("taskForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const title = document.getElementById("title").value.trim();
        const description = document.getElementById("description").value.trim();
        const userId = document.getElementById("user_id").value;
        const dueDate = document.getElementById("due_date").value;

        if (!title) {
          alert("âš ï¸ O tÃ­tulo da tarefa Ã© obrigatÃ³rio!");
          return document.getElementById("title").focus();
        }

        if (title.length > 100) {
          alert("âš ï¸ O tÃ­tulo deve ter no mÃ¡ximo 100 caracteres!");
          return document.getElementById("title").focus();
        }

        const taskData = {
          title,
          description,
          user_id: userId || null,
          due_date: dueDate || null
        };

        try {
          const response = await fetch("/tasks", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(taskData)
          });

          if (response.ok) {
            alert("âœ… Tarefa criada com sucesso!");
            window.location.href = "/tasks";
          } else {
            const error = await response.text();
            alert("âŒ Erro ao criar tarefa: " + error);
          }
        } catch (error) {
          alert("âŒ Erro ao conectar com o servidor.");
          console.error(error);
        }
      });

      // Atualiza contador de caracteres da descriÃ§Ã£o
      const descriptionInput = document.getElementById("description");
      descriptionInput.addEventListener("input", function () {
        const remaining = 500 - this.value.length;
        const helpText = this.parentElement.nextElementSibling;
        helpText.textContent = `DescriÃ§Ã£o opcional (${remaining} caracteres restantes)`;
        helpText.style.color = remaining < 50 ? "#e74c3c" : "#666";
      });
    </script>
  </body>
</html>
