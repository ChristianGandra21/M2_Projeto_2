<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Tarefas</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Lista de Tarefas</h1>
    <a href="/nova-tarefa"><button>+ Nova Tarefa</button></a>

    <table>
      <thead>
        <tr>
          <th>Título</th>
          <th>Descrição</th>
          <th>Data</th>
          <th>Usuário</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.due_date ? task.due_date.toISOString().split('T')[0] : '-' %></td>
            <td><%= task.user || '-' %></td>
            <td><%= task.completed ? '✔️' : '❌' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
